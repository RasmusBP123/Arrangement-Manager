@inject NavigationManager NavManager

    <li @onclick="@(() => NavigateToEventDetails(Model.Id))">
        <MatCard Class="card-container">
            <MatCardContent>
                <div class="flex-row">
                    <MatCardMedia Wide="true" Class="image-container" ImageUrl="https://material-components.github.io/material-components-web-catalog/static/media/photos/3x2/2.jpg" />
                    <div class="card-content">
                        <MatHeadline6>@Model.Name</MatHeadline6>
                        <MatSubtitle2>@PayableOnline</MatSubtitle2>
                    </div>
                    <MatBody2>@Model.Description</MatBody2>
                </div>
            </MatCardContent>
        </MatCard>
    </li>

