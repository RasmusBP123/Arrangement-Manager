@inject ThemeStore Theme

<MatThemeProvider Theme="Theme.Main">
    <MatButton Raised="true" @onclick="(() => SubstractAmount())">-</MatButton>
        <input @bind-value="CurrentAmount" @bind-value:event="oninput" style="width: 50px;" />
    <MatButton Raised="true" @onclick="@(() => AddAmount())">+</MatButton>
</MatThemeProvider>

@code {
    [Parameter]
    public int CurrentAmount { get; set; }

    [Parameter]
    public EventCallback<int> NewAmount { get; set; }

    [CascadingParameter]
    int MaxCustomerLimit { get; set; }

    private void SubstractAmount()
    {
        if (CurrentAmount > 0)
            CurrentAmount = CurrentAmount - 1;
    }

    private void AddAmount()
    {
        if(CurrentAmount < MaxCustomerLimit)
            CurrentAmount = CurrentAmount + 1;
    }
}
